{
  "name": "website-client",
  "version": "1.0.0",
  "type": "module",
  "browserslist": [
    "Chrome >= 120",
    "Firefox >= 115",
    "Safari >= 16",
    "Edge >= 120",
    "iOS >= 16",
    "ChromeAndroid >= 120"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "clean": "rm -rf dist *.tsbuildinfo e2e-results",
    "test": "node --import tsx --test tests/**/*.test.ts",
    "test:components": "vitest run",
    "test:components:watch": "vitest",
    "test:frontend": "vitest run --coverage",
    "test:frontend:watch": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:chromium": "playwright test --project=chromium",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "lint:security": "node scripts/check-innerhtml.js"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "jsdom": "^26.0.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite": "^6.4.1",
    "vite-plugin-version-mark": "^0.2.2",
    "vitest": "^2.1.8"
  },
  "dependencies": {
    "@codemirror/commands": "^6.10.1",
    "@codemirror/lang-css": "^6.3.1",
    "@codemirror/lang-html": "^6.4.11",
    "@codemirror/lang-javascript": "^6.2.4",
    "@codemirror/lang-json": "^6.0.2",
    "@codemirror/lang-markdown": "^6.5.0",
    "@codemirror/lang-python": "^6.2.1",
    "@codemirror/language": "^6.12.1",
    "@codemirror/search": "^6.5.11",
    "@codemirror/state": "^6.5.3",
    "@codemirror/view": "^6.39.7",
    "dompurify": "^3.2.3",
    "highlight.js": "^11.11.1",
    "jszip": "^3.10.1",
    "zod": "^4.2.1"
  }
}
