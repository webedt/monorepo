{
  "name": "@webedt/autonomous-dev-cli",
  "version": "0.1.0",
  "description": "Autonomous development CLI for continuous website improvement",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "autonomous-dev": "./bin/autonomous-dev.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "clean": "rm -rf dist coverage reports",
    "test": "node --import tsx --test src/**/*.test.ts",
    "test:watch": "node --import tsx --test --watch src/**/*.test.ts",
    "test:coverage": "node --import tsx --test --experimental-test-coverage src/**/*.test.ts",
    "test:jest": "jest",
    "test:jest:watch": "jest --watch",
    "test:jest:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --runInBand",
    "test:integration": "node --import tsx --test src/integration.test.ts",
    "test:unit": "node --import tsx --test src/**/*.test.ts --ignore=src/integration.test.ts",
    "benchmark": "node --import tsx src/test-utils/benchmark.ts",
    "lint": "tsc --noEmit",
    "lint:fix": "tsc --noEmit",
    "pretest": "npm run lint",
    "prepublishOnly": "npm run build && npm test"
  },
  "keywords": [
    "autonomous",
    "development",
    "cli",
    "claude",
    "ai"
  ],
  "author": "ETdoFresh",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.1.55",
    "@octokit/rest": "^21.1.1",
    "chalk": "^5.4.1",
    "commander": "^13.1.0",
    "dotenv": "^16.5.0",
    "drizzle-orm": "^0.44.2",
    "ora": "^8.2.0",
    "pg": "^8.16.0",
    "simple-git": "^3.27.0",
    "zod": "^3.25.34"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^22.15.29",
    "@types/pg": "^8.15.2",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "jest-watch-typeahead": "^2.2.2",
    "ts-jest": "^29.2.5",
    "tsx": "^4.21.0",
    "typescript": "5.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
