{
  "discovery": {
    "maxOpenIssues": 10,
    "excludePaths": [
      "node_modules",
      "dist",
      ".git",
      "coverage",
      "*.lock"
    ],
    "issueLabel": "autonomous-dev"
  },
  "execution": {
    "timeoutMinutes": 30
  },
  "evaluation": {
    "requireBuild": true,
    "requireTests": true,
    "requireHealthCheck": true,
    "requireSmokeTests": false,
    "healthCheckUrls": [],
    "smokeTestUrls": []
  },
  "merge": {
    "autoMerge": true,
    "requireAllChecks": true,
    "maxRetries": 3,
    "conflictStrategy": "rebase",
    "mergeMethod": "squash"
  },
  "daemon": {
    "pauseBetweenCycles": true
  }
}
