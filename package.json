{
  "name": "webedt-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "WebEDT - AI-powered code editing platform",
  "workspaces": [
    "shared",
    "website/frontend",
    "website/backend",
    "internal-api-server",
    "tools/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "dev": "concurrently -n shared,frontend,backend,api -c magenta,blue,green,yellow \"npm run dev -w shared\" \"npm run dev -w website/frontend\" \"npm run dev -w website/backend\" \"npm run dev -w internal-api-server\"",
    "start": "npm run start -w website/backend",
    "clean": "npm run clean --workspaces --if-present"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
