{
  "name": "@webedt/shared",
  "version": "1.0.0",
  "type": "module",
  "description": "Shared utilities and core business logic for WebEDT monorepo",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "test": "node --import tsx --test src/**/*.test.ts --test-name-pattern '(?!.*Live Integration).*'",
    "test:coverage": "node --import tsx --test --experimental-test-coverage src/**/*.test.ts",
    "test:integration": "node --import tsx --env-file=../.env --test src/**/*.integration.test.ts"
  },
  "keywords": [
    "webedt",
    "shared",
    "utilities"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.1.55",
    "@anthropic-ai/sdk": "^0.71.2",
    "@lucia-auth/adapter-postgresql": "^3.1.2",
    "@octokit/rest": "^21.1.1",
    "bcrypt": "^5.1.1",
    "better-sse": "^0.13.0",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.38.3",
    "lucia": "^3.2.2",
    "pg": "^8.13.1",
    "simple-git": "^3.19.1",
    "uuid": "^13.0.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/node": "^22.10.2",
    "@types/pg": "^8.11.10",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
