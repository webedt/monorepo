# WebEDT Monorepo - Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# REQUIRED
# =============================================================================

# PostgreSQL connection string
DATABASE_URL=postgresql://user:password@localhost:5432/webedt

# Session encryption secret (generate a random string)
SESSION_SECRET=your-secret-key-here

# =============================================================================
# SERVER PORTS
# =============================================================================

# Frontend port (Vite dev/preview server)
FRONTEND_PORT=3000

# Backend API port (Express server)
BACKEND_PORT=3001

# Node environment
NODE_ENV=development

# CORS allowed origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000

# Workspace directory for file operations
WORKSPACE_DIR=/workspace

# =============================================================================
# GITHUB OAUTH
# =============================================================================

# GitHub OAuth app credentials
# Create at: https://github.com/settings/developers
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# =============================================================================
# CLAUDE REMOTE SESSIONS (optional)
# =============================================================================

# Claude environment ID for remote sessions
CLAUDE_ENVIRONMENT_ID=

# Claude API settings
CLAUDE_API_BASE_URL=https://api.anthropic.com
CLAUDE_DEFAULT_MODEL=claude-opus-4-5-20251101

# =============================================================================
# VERBOSE/DEBUG MODE
# =============================================================================

# Verbose mode for maximum detail debugging
# Options: 'off' (default), 'on' (verbose logging), 'debug' (verbose + debug logs)
VERBOSE_MODE=off

# Log level for the logger
# Options: 'info' (default), 'debug' (shows debug messages)
LOG_LEVEL=info

# Enable verbose HTTP request/response logging (default: follows VERBOSE_MODE)
VERBOSE_HTTP=false

# Enable verbose timing information in logs (default: follows VERBOSE_MODE)
VERBOSE_TIMING=false

# =============================================================================
# OPTIONAL INTEGRATIONS
# =============================================================================

# OpenAI API key (for audio transcription)
OPENAI_API_KEY=

# OpenRouter API key (for title generation)
OPENROUTER_API_KEY=

# =============================================================================
# OPERATIONAL LIMITS (optional - defaults work for most deployments)
# =============================================================================

# Session operation limits
# SESSION_CONCURRENCY_LIMIT=3        # Parallel operations per bulk request (max: 50)
# SESSION_MAX_BATCH_SIZE=100         # Maximum sessions per bulk operation (max: 1000)
# SESSION_MAX_ARCHIVE_BATCH_SIZE=50  # Maximum sessions per archive batch

# DataLoader batch limits
# DATALOADER_MAX_BATCH_SIZE=100      # Maximum items per DataLoader batch (max: 1000)

# Search limits
# SEARCH_GAMES_LIMIT=50              # Maximum games returned from search
# SEARCH_USERS_LIMIT=20              # Maximum users returned from search
# SEARCH_SESSIONS_LIMIT=30           # Maximum sessions returned from search
# SEARCH_POSTS_LIMIT=30              # Maximum posts returned from search
# SEARCH_DEFAULT_LIMIT=10            # Default search results limit
# SEARCH_MAX_LIMIT=50                # Maximum allowed search results (max: 500)
# SEARCH_SUGGESTIONS_DEFAULT_LIMIT=5 # Default suggestions limit
# SEARCH_SUGGESTIONS_MAX_LIMIT=10    # Maximum suggestions limit

# Live chat limits
# LIVE_CHAT_MESSAGES_DEFAULT_LIMIT=100  # Default messages to fetch (max: 500)
# LIVE_CHAT_HISTORY_LIMIT=50            # Messages for execution context
# LIVE_CHAT_CONTEXT_MESSAGES=10         # Messages for conversation context

# Batch operation limits
# BATCH_DEFAULT_CONCURRENCY=5        # Default concurrency for batch operations (max: 50)
# BATCH_MAX_BATCH_SIZE=100           # Maximum items per batch operation (max: 1000)
